extends base

block head_content
    link(rel='stylesheet' href='/css/style.css')

block page_content
    if user 
        script(src="/js/redirect.js") 
    else
        .fit-container.center
            .login-form
                h2.heading-secondary.ma-bt-lg Create your new account
                form.form.form__signup
                    .form__group
                        label.form__label(for='name') Username
                        input#name.form__input(type='text', placeholder='elhosen salama', required)
                    .form__group
                        label.form__label(for='email') Email address
                        input#email.form__input(type='email', placeholder='you@example.com', required)
                    .form__group.ma-bt-md
                        label.form__label(for='password') Password
                        input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                    .form__group.ma-bt-md
                        label.form__label(for='passwordConfirm') Password Confirm
                        input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8' )
                    .form__group
                        button.btn.btn--green Sign Up